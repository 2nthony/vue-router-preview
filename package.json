{
  "name": "vue-router-preview",
  "version": "1.1.0",
  "description": "Preview the route component of router-link when hovering.",
  "main": "dist/vue-router-preview.cjs.js",
  "module": "dist/vue-router-preview.esm.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "xo",
    "build": "rollup -c && cp lib/preview.css dist/index.css",
    "prepublishOnly": "npm run build",
    "example": "dvan example/index.js --dev"
  },
  "author": "evillt <ijoec123@gmail.com>",
  "repository": {
    "type": "git",
    "url": "evillt/vue-router-preview"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "dvan": "^2.3.2",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.1",
    "rollup": "^1.1.2",
    "rollup-plugin-terser": "^4.0.3",
    "vue": "^2.5.22",
    "vue-router": "^3.0.2",
    "vue-template-compiler": "^2.5.22",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "parser": "babel-eslint",
    "envs": [
      "browser"
    ],
    "rules": {
      "no-new": "off",
      "no-unused-expressions": "off",
      "import/no-unassigned-import": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "branch": "master"
  }
}
