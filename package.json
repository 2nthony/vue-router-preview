{
  "name": "vue-router-preview",
  "version": "1.1.3",
  "description": "Preview the route component of router-link when hovering.",
  "main": "dist/vue-router-preview.cjs.js",
  "module": "dist/vue-router-preview.esm.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "tsc": "tsc",
    "lint": "tslint -c tslint.json 'lib/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "build": "rollup -c && cp lib/preview.css dist/index.css",
    "prepublishOnly": "tsc && yarn build",
    "example": "dvan example/index.js --dev"
  },
  "author": "evillt <ijoec123@gmail.com>",
  "repository": {
    "type": "git",
    "url": "evillt/vue-router-preview"
  },
  "license": "MIT",
  "devDependencies": {
    "dvan": "^2.3.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.1",
    "rollup": "^1.1.2",
    "rollup-plugin-terser": "^4.0.3",
    "tslint": "^5.12.1",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.1",
    "vue": "^2.5.22",
    "vue-router": "^3.0.2",
    "vue-template-compiler": "^2.5.22"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint:fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "branch": "master"
  }
}
